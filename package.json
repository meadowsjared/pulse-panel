{
  "name": "pulse-panel",
  "private": true,
  "version": "0.24.4",
  "author": "Jared Meadows <meadowsjared@gmail.com>",
  "main": "src/electron/main/main.js",
  "description": "A soundboard app that looks nice too",
  "homepage": "https://github.com/meadowsjared/pulse-panel/blob/main/README.md",
  "scripts": {
    "dev": "bun app:dev",
    "build": "bun app:build",
    "preview": "bun app:preview",
    "rebuild": "electron-rebuild",
    "postinstall": "bun run rebuild",
    "vite:dev": "vite",
    "vite:build": "vite build",
    "vite:preview": "vite preview",
    "ts": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c eslint.config.js ./src",
    "app:dev": "tsc && concurrently vite \" electron .\" \"tsc -w\"",
    "app:build": "bun vite:build && tsc && electron-builder",
    "app:preview": "bun vite:build && tsc && electron ."
  },
  "build": {
    "appId": "YourAppID",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist",
      "src/electron/**/*"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "/src/assets/pulse-panel_icon.ico",
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "extraResources": [
      {
        "from": "node_modules/regedit/vbs",
        "to": "regedit/vbs",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@meadowsjared/robotjs": "0.6.26",
    "@slosk/sudo-prompt": "^9.2.2",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/vue-virtual": "^3.13.13",
    "@vueuse/core": "^14.1.0",
    "better-sqlite3": "^12.5.0",
    "extract-zip": "^2.0.1",
    "idb": "^8.0.3",
    "lodash": "^4.17.21",
    "nconf": "^0.13.0",
    "pinia": "^3.0.4",
    "@meadowsjared/qhotkeys": "^1.1.18",
    "regedit": "^5.1.4",
    "tailwindcss": "^4.1.18",
    "vue": "^3.5.26",
    "vue-color": "^3.3.3",
    "vue-inline-svg": "^4.0.1"
  },
  "devDependencies": {
    "@evg3/vite-plugin-rewrite-all": "^1.0.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/lodash": "^4.17.21",
    "@types/nconf": "^0.10.7",
    "@types/node": "^25.0.3",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitejs/plugin-vue": "^6.0.3",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "dmg-builder": "26.0.12",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-builder-squirrel-windows": "26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "node-abi": "^4.24.0",
    "postcss": "^8.5.6",
    "typescript": "^5.9.3",
    "unplugin-auto-import": "^20.3.0",
    "unplugin-vue-components": "^30.0.0",
    "vite": "^7.3.0",
    "vue-router": "^4.6.4"
  }
}
