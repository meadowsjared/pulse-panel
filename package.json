{
  "name": "pulse-panel",
  "private": true,
  "version": "0.7.5",
  "author": "Jared Meadows <meadowsjared@gmail.com>",
  "main": "src/electron/main/main.js",
  "description": "A soundboard app that looks nice too",
  "homepage": "https://github.com/meadowsjared/pulse-panel/blob/main/README.md",
  "scripts": {
    "dev": "bun app:dev",
    "build": "bun app:build",
    "preview": "bun app:preview",
    "rebuild": "electron-rebuild",
    "vite:dev": "vite",
    "vite:build": "vite build",
    "vite:preview": "vite preview",
    "ts": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c eslint.config.js ./src",
    "app:dev": "tsc && concurrently vite \" electron .\" \"tsc -w\"",
    "app:build": "bun vite:build && tsc && electron-builder",
    "app:preview": "bun vite:build && tsc && electron ."
  },
  "build": {
    "appId": "YourAppID",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist",
      "src/electron/**/*"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "/src/assets/pulse-panel_icon.ico",
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "extraResources": [
      {
        "from": "node_modules/regedit/vbs",
        "to": "regedit/vbs",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@meadowsjared/robotjs": "0.6.26",
    "@slosk/sudo-prompt": "^9.2.2",
    "@tailwindcss/forms": "^0.5.10",
    "extract-zip": "^2.0.1",
    "idb": "^8.0.1",
    "lodash": "^4.17.21",
    "nconf": "^0.12.1",
    "pinia": "^2.3.0",
    "qhotkeys": "^1.1.5",
    "regedit": "^5.1.3",
    "tailwindcss": "^3.4.17",
    "uuid": "^11.0.5",
    "vue": "^3.5.13",
    "vue-inline-svg": "^3.1.4"
  },
  "devDependencies": {
    "@evg3/vite-plugin-rewrite-all": "^1.0.3",
    "@types/lodash": "^4.17.14",
    "@types/nconf": "^0.10.7",
    "@types/node": "^22.10.7",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "dmg-builder": "25.1.8",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "electron-builder-squirrel-windows": "25.1.8",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "node-abi": "^3.73.0",
    "postcss": "^8.5.1",
    "typescript": "5.7.3",
    "unplugin-auto-import": "^19.0.0",
    "unplugin-vue-components": "^28.0.0",
    "vite": "^6.0.7",
    "vue-router": "^4.5.0"
  }
}
